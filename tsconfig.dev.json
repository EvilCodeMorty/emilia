{
  "compilerOptions": {
    "target": "ESNext", //编译后的js文件的版本;
    "module": "CommonJS", //编译后的js文件的模块化规范;
    "rootDir": "./src", //编译前的ts文件的根目录;
    "esModuleInterop": true, //是否启用es模块的interop;
    "strict": true, //开启所有严格的类型检查;
    "strictNullChecks": true, //开启null和undefined的严格检查;
    "skipLibCheck": true, //跳过声明文件的检查;
    "forceConsistentCasingInFileNames": true, //文件名的大小写必须一致;
    "noImplicitAny": true, //不允许隐式的any类型;
    "noImplicitThis": true, //不允许this有隐式的any类型;
    "alwaysStrict": true, //总是在严格模式下解析;
    "noUnusedLocals": true, //不允许有未使用的局部变量;
    "noUnusedParameters": true, //不允许有未使用的参数;
    "noImplicitReturns": true, //函数有返回值时必须有返回值类型;
    "noFallthroughCasesInSwitch": true, //不允许switch语句的case语句贯穿;
    "noEmit": false, //不生成编译后的js文件;
    "noEmitOnError": true, //有错误时不生成编译后的js文件;
    "noImplicitOverride": true, //不允许重写父类的方法;
    "noPropertyAccessFromIndexSignature": true, //不允许通过索引签名访问属性;
    "noUncheckedIndexedAccess": true //不允许对可能为undefined的值进行索引访问;
  },
  "include": [
    "src/**/*.ts" //编译src目录下的所有ts文件;
  ],
  "exclude": [
    "node_modules" //排除node_modules目录;
  ],
  "compileOnSave": true //保存文件时自动编译;
}
